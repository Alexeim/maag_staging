---
import Layout from "@/Layouts/Layout.astro";
import Button from "@/components/common/Button.astro";
---

<Layout title="Создать новую статью" navbarVariant="default" includePreFooterCTA={false} useClientRouter={true}>
  <main class="bg-base-200 min-h-screen pt-[150px] pb-[100px]">
    <div class="max-w-[825px] mx-auto" x-data="$lazy('articleCreator')">
      <h1 class="text-4xl font-bold mb-8">Создать новую статью</h1>

      <!-- Meta Section: Title, Cover Image, Tags -->
      <div class="mb-6 p-4 border border-gray-200 rounded-md bg-white">
        <h2 class="text-2xl font-bold mb-4">Основная информация</h2>
        
        <!-- Title -->
        <label class="block text-sm font-medium text-gray-700 mb-2">Заголовок статьи</label>
        <template x-if="isEditingTitle">
          <div>
            <input type="text" x-model="editingTitleText" class="w-full p-2 border border-gray-300 rounded-md">
            <div class="flex justify-end gap-4 mt-2">
              <Button variant="secondary" size="sm" @click="cancelEditTitle()">Отмена</Button>
              <Button variant="primary" size="sm" @click="saveTitle()">Сохранить</Button>
            </div>
          </div>
        </template>
        <template x-if="!isEditingTitle">
          <div class="flex justify-between items-center">
            <h3 class="text-xl font-bold" x-text="article.title || 'Введите заголовок...'"></h3>
            <Button variant="outline" size="sm" @click="editTitle()">Редактировать</Button>
          </div>
        </template>

        <!-- Category -->
        <hr class="my-4">
        <label for="category-select" class="block text-sm font-medium text-gray-700 mb-2">Категория</label>
        <select id="category-select" x-model="article.category" class="w-full p-2 border border-gray-300 rounded-md">
          <option value="" disabled>Выберите категорию...</option>
          <option value="Культура">Культура</option>
          <option value="Париж">Париж</option>
          <option value="Новости">Новости</option>
        </select>

        <!-- Cover Image -->
        <hr class="my-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Обложка статьи</label>
        <div class="flex items-center" x-data="{ fileName: '' }">
          <label for="file-upload" class="cursor-pointer py-2 px-4 rounded-full border-0 text-sm font-semibold bg-violet-50 text-violet-700 hover:bg-violet-100">
            Выберите файл
          </label>
          <input id="file-upload" type="file" class="hidden" @change="handleImageUpload($event, true, null); fileName = $event.target.files[0]?.name || ''" accept="image/png, image/jpeg, image/webp">
          <span x-text="fileName ? fileName : (article.imageUrl ? 'Изображение загружено' : 'Файл не выбран')" class="ml-4 text-sm text-gray-500"></span>
        </div>
        <div x-show="uploading" class="mt-4">
            <p>Загрузка: <span x-text="uploadProgress.toFixed(2) + '%'"></span></p>
            <div class="w-full bg-gray-200 rounded-full h-2.5"><div class="bg-blue-600 h-2.5 rounded-full" :style="{ width: uploadProgress + '%' }"></div></div>
        </div>
        <div x-show="article.imageUrl && !uploading" class="mt-4">
            <p class="text-sm text-green-600">Главное изображение успешно загружено!</p>
            <img :src="article.imageUrl" alt="Предпросмотр обложки" class="mt-2 rounded-md max-h-60" />
            
            <!-- Caption Display/Edit Logic -->
            <div class="mt-4">
              <label class="block text-sm font-medium text-gray-700 mb-2">Подпись к изображению</label>
              <!-- Editing State -->
              <template x-if="isEditingCaption">
                <div>
                  <input type="text" x-model="editingCaptionText" class="w-full p-2 border border-gray-300 rounded-md" placeholder="Введите подпись...">
                  <div class="flex justify-end gap-4 mt-2">
                    <Button variant="secondary" size="sm" @click="cancelEditCaption()">Отмена</Button>
                    <Button variant="primary" size="sm" @click="saveCaption()">Сохранить</Button>
                  </div>
                </div>
              </template>
              <!-- Display State -->
              <template x-if="!isEditingCaption">
                <div class="flex justify-between items-center">
                  <p class="text-gray-800" x-text="article.imageCaption || 'Подпись отсутствует...'"></p>
                  <Button variant="outline" size="sm" @click="editCaption()">Редактировать</Button>
                </div>
              </template>
            </div>
        </div>
      </div>

      <!-- Article Content Section -->
      <div>
        <h2 class="text-2xl font-bold mb-4">Содержание статьи</h2>
        
        <!-- Render existing blocks -->
        <div class="space-y-4">
          <template x-for="(block, index) in article.contentBlocks" :key="index">
            <div class="p-4 border border-gray-200 rounded-md bg-white relative group">
              
              <!-- Editing State -->
              <template x-if="editingIndex === index">
                <div>
                  <h3 class="text-lg font-semibold mb-2 capitalize" x-text="editingBlock.type.replace('-', ' ')"></h3>
                  
                  <!-- Text-based block editor -->
                  <template x-if="['paragraph', 'first-paragraph', 'h1', 'h2', 'h3', 'quote'].includes(editingBlock.type)">
                    <textarea x-model="editingBlock.text" class="w-full p-2 border border-gray-300 rounded-md" rows="6"></textarea>
                  </template>

                  <!-- Image block editor -->
                  <template x-if="editingBlock.type === 'image'">
                    <div x-data="{ blockFileName: '' }">
                      <label class="block text-sm font-medium text-gray-700 mb-2">Изображение</label>
                      <div class="flex items-center mb-2">
                        <label :for="'block-image-upload-' + index" class="cursor-pointer py-2 px-4 rounded-full border-0 text-sm font-semibold bg-violet-50 text-violet-700 hover:bg-violet-100">
                          Выберите файл
                        </label>
                        <input :id="'block-image-upload-' + index" type="file" class="hidden" @change="handleImageUpload($event, false, index); blockFileName = $event.target.files[0]?.name || ''" accept="image/png, image/jpeg, image/webp">
                        <span x-text="blockFileName || (editingBlock.url ? 'Изображение загружено' : 'Файл не выбран')" class="ml-4 text-sm text-gray-500"></span>
                      </div>
                      
                      <!-- Upload progress for block image -->
                      <div x-show="uploading && editingIndex === index" class="mt-2">
                          <p>Загрузка: <span x-text="uploadProgress.toFixed(2) + '%'"></span></p>
                          <div class="w-full bg-gray-200 rounded-full h-2.5"><div class="bg-blue-600 h-2.5 rounded-full" :style="{ width: uploadProgress + '%' }"></div></div>
                      </div>

                      <img x-show="editingBlock.url && !uploading" :src="editingBlock.url" alt="Предпросмотр блока" class="mt-2 rounded-md max-h-60" />

                      <label class="block text-sm font-medium text-gray-700 mt-4 mb-2">Подпись к изображению</label>
                      <input type="text" x-model="editingBlock.caption" class="w-full p-2 border border-gray-300 rounded-md" placeholder="Введите подпись...">
                    </div>
                  </template>
                  
                  <!-- Add other block type editors here -->

                  <div class="flex justify-end gap-4 mt-2">
                    <Button variant="secondary" @click="cancelEdit()">Отмена</Button>
                    <Button variant="primary" @click="updateBlock()">Сохранить блок</Button>
                  </div>
                </div>
              </template>

              <!-- Display State -->
              <template x-if="editingIndex !== index">
                <div>
                  <!-- Paragraphs & Headers -->
                  <p :class="{
                    'text-lg': block.type === 'paragraph',
                    'text-xl first-letter:text-4xl first-letter:font-bold': block.type === 'first-paragraph',
                    'text-4xl font-bold': block.type === 'h1',
                    'text-3xl font-bold': block.type === 'h2',
                    'text-2xl font-bold': block.type === 'h3',
                    'text-2xl italic border-l-4 pl-4 my-4': block.type === 'quote'
                  }" x-text="block.text"></p>

                  <!-- Image -->
                  <template x-if="block.type === 'image'">
                    <figure>
                      <img :src="block.url" alt="Содержимое статьи" class="rounded-md w-full">
                      <figcaption class="text-center text-sm text-gray-500 mt-2" x-text="block.caption"></figcaption>
                    </figure>
                  </template>

                  <!-- Add other block type displays here -->

                  <!-- Action buttons on hover -->
                  <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity flex gap-2">
                    <Button variant="outline" size="sm" @click="editBlock(index)">Редактировать</Button>
                    <Button variant="danger" size="sm" @click="deleteBlock(index)">Удалить</Button>
                  </div>
                </div>
              </template>
            </div>
          </template>
        </div>

        <!-- Add New Block UI -->
        <div class="mt-6">
          <template x-if="showBlockOptions">
            <div class="grid grid-cols-3 gap-4 p-4 border border-gray-200 rounded-md bg-white">
              <button @click="addBlock('paragraph')" class="text-left p-2 hover:bg-gray-100 rounded">Обычный абзац</button>
              <button @click="addBlock('first-paragraph')" class="text-left p-2 hover:bg-gray-100 rounded">Абзац с буквицей</button>
              <button @click="addBlock('h2')" class="text-left p-2 hover:bg-gray-100 rounded">Подзаголовок H2</button>
              <button @click="addBlock('h3')" class="text-left p-2 hover:bg-gray-100 rounded">Подзаголовок H3</button>
              <button @click="addBlock('quote')" class="text-left p-2 hover:bg-gray-100 rounded">Цитата</button>
              <button @click="addBlock('image')" class="text-left p-2 hover:bg-gray-100 rounded">Картинка</button>
              <!-- Add more block types from Alexei's list here -->
            </div>
          </template>
          
          <div x-show="!showBlockOptions" class="text-center">
            <Button variant="primary" @click="openBlockSelector()">+ Добавить блок</Button>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="mt-8 flex justify-end gap-4">
        <Button variant="secondary" @click="previewArticle()">Предпросмотр</Button>
        <Button variant="primary" @click="saveArticle()">Сохранить статью</Button>
      </div>
    </div>
  </main>
</Layout>

