---
import Layout from "../Layouts/Layout.astro";
import { Image } from 'astro:assets';
import Button from "../components/common/Button.astro";
---

<Layout
  navbarVariant="default"
  includePreFooterCTA={false}
  title="Landing Page"
  useClientRouter={true}
>
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {/* News Column */}
      <div class="lg:col-span-1">
        <h2 class="text-2xl font-bold mb-4">News</h2>
        <div class="space-y-4">
          <div class="border-b pb-4">
            <div class="flex items-center gap-2">
                <span class="badge badge-primary">Culture</span>
                <span class="badge badge-secondary">Art</span>
            </div>
            <h3 class="text-lg font-semibold mt-2">New exhibition at the Louvre</h3>
          </div>
          <div class="border-b pb-4">
            <div class="flex items-center gap-2">
                <span class="badge badge-primary">Music</span>
            </div>
            <h3 class="text-lg font-semibold mt-2">Opera Garnier announces new season</h3>
          </div>
          <div class="border-b pb-4">
            <div class="flex items-center gap-2">
                <span class="badge badge-primary">Cinema</span>
            </div>
            <h3 class="text-lg font-semibold mt-2">French film festival dates revealed</h3>
          </div>
        </div>
      </div>

      {/* Main Column */}
      <div class="lg:col-span-1">
        <h2 class="text-2xl font-bold mb-4">Main</h2>
        <div class="card bg-base-100 shadow-xl">
          <figure>
            <img src="https://placehold.co/600x400" alt="Main article" />
          </figure>
          <div class="card-body">
            <h2 class="card-title">
              Paris Opera has a new star
              <div class="badge badge-secondary">NEW</div>
            </h2>
            <p>A new star is born at the Paris Opera, and his name is Sergey.</p>
            <div class="card-actions justify-end">
              <div class="badge badge-outline">Fashion</div>
              <div class="badge badge-outline">Culture</div>
            </div>
          </div>
        </div>
      </div>

      {/* Calendar Column */}
      <div class="lg:col-span-1">
        <h2 class="text-2xl font-bold mb-4">Calendar</h2>
        <div class="card bg-base-100 shadow-xl">
          <figure>
            <img src="https://placehold.co/400x300" alt="Event" />
          </figure>
          <div class="card-body">
            <p class="text-sm">July 15, 2025</p>
            <h2 class="card-title">Special performance by Eric Bulatov</h2>
            <div class="card-actions justify-end">
              <Button variant="primary">Buy Tickets</Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
