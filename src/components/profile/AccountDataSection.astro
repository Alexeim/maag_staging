---
// Account data section component for profile page
---

<div class="space-y-8">
  <!-- Section Header -->
  <div class="space-y-6">
    <div class="w-full h-px bg-neutral-200"></div>
    <h2
      class="text-base font-lora font-normal uppercase tracking-[0.46em] text-base-content"
    >
      Данные аккаунта
    </h2>
  </div>

  <!-- Account Form -->
  <div class="space-y-10 w-full max-w-lg" x-data="$lazy('profile')">
    <!-- Email Field -->
    <div class="space-y-4">
      <div class="space-y-4">
        <label
          class="text-xs font-inter font-normal uppercase tracking-[0.25em] text-base-content"
        >
          email
        </label>
        <div class="bg-base-100 border border-neutral-200 rounded-lg p-2">
          <input
            type="email"
            x-model="$store.auth.profile.email"
            readonly
            class="w-full bg-transparent text-xs font-inter text-neutral-400 outline-none"
          />
        </div>
      </div>
    </div>

    <!-- Password Field -->
    <div class="space-y-4">
      <div class="space-y-4">
        <label
          class="text-xs font-inter font-normal uppercase tracking-[0.25em] text-base-content"
        >
          Пароль
        </label>
        <div class="flex items-center gap-2">
          <div
            class="bg-base-100 border border-neutral-200 rounded-lg p-2 flex-1"
          >
            <input
              type="password"
              value="**********"
              readonly
              class="w-full bg-transparent text-xs font-inter text-neutral-400 outline-none"
            />
          </div>
          <button class="btn btn-outline btn-primary" @click.prevent="">
            Поменять пароль
          </button>
        </div>
      </div>
    </div>

    <!-- Name Fields -->
    <div class="space-y-4">
      <div class="space-y-4">
        <label
          class="text-xs font-inter font-normal uppercase tracking-[0.25em] text-base-content"
        >
          Имя
        </label>
        <div class="bg-base-100 border border-neutral-200 rounded-lg p-2">
          <input
            type="text"
            placeholder="Ваше имя"
            x-model="formData.firstName"
            class="w-full bg-transparent text-xs font-inter text-base-content outline-none"
          />
        </div>
      </div>
      <div class="space-y-4">
        <label
          class="text-xs font-inter font-normal uppercase tracking-[0.25em] text-base-content"
        >
          Фамилия
        </label>
        <div class="bg-base-100 border border-neutral-200 rounded-lg p-2">
          <input
            type="text"
            placeholder="Ваша фамилия"
            x-model="formData.lastName"
            class="w-full bg-transparent text-xs font-inter text-base-content outline-none"
          />
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="space-y-4 pt-6">
      <button
        class="btn btn-primary w-full"
        @click="saveChanges()"
      >
        Сохранить изменения
      </button>

      <button
        class="btn btn-error btn-outline w-full"
        @click="deleteAccount()"
      >
        Удалить аккаунт
      </button>
    </div>
  </div>
</div>
