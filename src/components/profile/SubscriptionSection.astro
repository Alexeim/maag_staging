---
// Subscription section component for profile page
---

<div class="space-y-8">
  <!-- Section Header -->
  <div class="space-y-6">
    <div class="w-full h-px bg-neutral-200"></div>
    <h2
      class="text-base font-lora font-normal uppercase tracking-[0.46em] text-base-content"
    >
      Подписка
    </h2>
  </div>

  <!-- Subscription Content -->
  <div class="space-y-8 w-full max-w-2xl">
    <!-- Payment Date -->
    <div class="flex items-center gap-8">
      <div class="w-44">
        <p class="text-lg font-lora text-base-content">Оплачено до</p>
      </div>
      <div class="w-44">
        <p class="text-lg font-lora text-accent">25.08.2026</p>
      </div>
              <div class="w-full lg:w-auto">
                <button class="btn btn-primary w-full lg:w-auto">Оплатить</button>
              </div>
            </div>

            <!-- Payment Method -->
            <div class="flex flex-col lg:flex-row lg:items-center gap-4 lg:gap-8">
              <div class="w-full lg:w-44">
                <p class="text-lg font-lora text-base-content">Способ оплаты</p>
              </div>
              <div class="w-full lg:w-44">
                <p class="text-lg font-lora text-accent">PayPal</p>
              </div>
              <div class="w-full lg:w-auto">
                <button class="btn btn-primary w-full lg:w-auto">Поменять способ оплаты</button>
              </div>
    </div>
  </div>
</div>
