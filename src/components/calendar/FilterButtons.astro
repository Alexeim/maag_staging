---
// This component is now controlled by Alpine.js from the parent page
---
<div class="flex flex-wrap gap-4">
    <button
      @click="setFilter('все')"
      :class="{'btn-primary': activeFilter === 'все', 'btn-ghost': activeFilter !== 'все'}"
      class="btn btn-sm rounded-full flex items-center gap-2"
    >
      <svg width="10" height="9" viewBox="0 0 10 9" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 1.5H1M7.6 4.5H2.4M6 7.5H4" stroke="currentColor" stroke-linecap="round"/></svg>
      <span x-text="`${events.length} событий`"></span>
    </button>
    <template x-for="filter in filters">
      <button
        @click="setFilter(filter)"
        :class="{'btn-primary': activeFilter === filter, 'bg-gray-100': activeFilter !== filter}"
        class="btn btn-sm rounded-full capitalize"
        x-text="filter"
      >
      </button>
    </template>
  </div>