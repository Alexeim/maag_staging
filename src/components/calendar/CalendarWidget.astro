---
// This component is now controlled by Alpine.js from the parent page
---

<div class="bg-white/90 border border-base-300 p-6 lg:p-8 w-full max-w-md shadow-[0_18px_40px_rgba(0,0,0,0.08)]">
  <div x-show="isLazyLoading" class="text-center">Загрузка...</div>

  <div x-show="!isLazyLoading">
    <div class="flex justify-between items-center mb-5">
      <button
        @click="$dispatch('change-month', -1)"
        class="w-9 h-9 border border-base-300 rounded-none flex items-center justify-center cursor-pointer transition-colors hover:bg-base-200"
      >
        <svg
          width="8"
          height="14"
          viewBox="0 0 8 14"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M7 13L1 7L7 1"
            stroke="black"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path></svg
        >
      </button>
      <h3
        class="font-semibold text-2xl text-base-content capitalize font-inter tracking-[0.04em]"
        x-text="`${monthName} ${year}`"
      >
      </h3>
      <button
        @click="$dispatch('change-month', 1)"
        class="w-9 h-9 border border-base-300 rounded-none flex items-center justify-center cursor-pointer transition-colors hover:bg-base-200"
      >
        <svg
          width="8"
          height="14"
          viewBox="0 0 8 14"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M1 13L7 7L1 1"
            stroke="black"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path></svg
        >
      </button>
    </div>
    <div class="grid grid-cols-7 text-center text-neutral my-4 font-inter text-sm tracking-[0.08em] uppercase">
      <div>Пн</div>
      <div>Вт</div>
      <div>Ср</div>
      <div>Чт</div>
      <div>Пт</div>
      <div>Сб</div>
      <div>Вс</div>
    </div>
    <div class="grid grid-cols-7 text-center gap-y-2">
      <template x-for="i in firstDayOfMonth">
        <div></div>
      </template>
      <template x-for="day in daysInMonth">
        <div class="relative">
          <button
            @click="$dispatch('date-selected', { day })"
            :class="{
              'bg-error text-error-content': isSameDay(selectedDate, new Date(Date.UTC(year, month, day))),
              'hover:bg-gray-200': !isSameDay(selectedDate, new Date(Date.UTC(year, month, day)))
            }"
            class="w-11 h-11 flex items-center justify-center mx-auto transition-colors cursor-pointer font-inter font-medium tracking-[0.02em]"
            x-text="day"></button>
          <div
            x-show="hasEvent(day)"
            class="absolute bottom-[3px] left-1/2 -translate-x-1/2 w-1.5 h-1.5 bg-error rounded-full"
          >
          </div>
        </div>
      </template>
    </div>
  </div>
</div>
