// Footer for cultural media website about Paris
---

<footer class="bg-base-300 text-base-content">
  <div class="mx-auto px-4 lg:px-12 py-12">
    {/* Main Footer Content */}
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-8 text-center sm:text-left"
    >
      {/* About Section */}
      <div>
        <h3 class="text-lg font-normal mb-4 uppercase tracking-wide">О нас</h3>
        <ul class="space-y-2">
          <li>
            <a href="/about" class="hover:text-accent transition-colors"
              >О проекте</a
            >
          </li>
          <li>
            <a href="/team" class="hover:text-accent transition-colors"
              >Редакция</a
            >
          </li>
          <li>
            <a href="/contacts" class="hover:text-accent transition-colors"
              >Контакты</a
            >
          </li>
          <li>
            <a href="/advertise" class="hover:text-accent transition-colors"
              >Реклама</a
            >
          </li>
        </ul>
      </div>

      {/* Culture Sections */}
      <div>
        <h3 class="text-lg font-normal mb-4 uppercase tracking-wide">
          Культура
        </h3>
        <ul class="space-y-2">
          <li>
            <a href="/theater" class="hover:text-accent transition-colors"
              >Театр</a
            >
          </li>
          <li>
            <a href="/music" class="hover:text-accent transition-colors"
              >Музыка</a
            >
          </li>
