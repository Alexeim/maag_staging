            <a href="/art" class="hover:text-accent transition-colors"
              >Искусство</a
            >
          </li>
          <li>
            <a href="/cinema" class="hover:text-accent transition-colors"
              >Кино</a
            >
          </li>
          <li>
            <a href="/literature" class="hover:text-accent transition-colors"
              >Литература</a
            >
          </li>
        </ul>
      </div>

      {/* Paris Guide */}
      <div>
        <h3 class="text-lg font-normal mb-4 uppercase tracking-wide">Париж</h3>
        <ul class="space-y-2">
          <li>
            <a href="/events" class="hover:text-accent transition-colors"
              >События</a
            >
          </li>
          <li>
            <a href="/museums" class="hover:text-accent transition-colors"
              >Музеи</a
            >
          </li>
          <li>
            <a href="/galleries" class="hover:text-accent transition-colors"
