---
import { Image } from "astro:assets";

import NetlenkaCard from "./NetlenkaCard.astro";
import ArticleCard from "./ArticleCard.astro";

import eric from "../../assets/common/image.jpg";
import picture1 from "../../assets/images/culture.jpg";
import picture2 from "../../assets/images/cal.jpeg";
import picture3 from "../../assets/images/article_content/par.jpeg";
---

<section class="w-full px-4 lg:px-8 bg-base-200 mt-0 pb-12 overflow-hidden border border-red-500">
  <div class="flex flex-col lg:flex-row min-h-[200px] gap-8 border border-yellow-500">
    <div class="w-full lg:w-9/12 flex flex-col">
      <div class="pl-4 pr-0">
        <h2 class="text-lg font-normal mb-6 uppercase tracking-[0.3em] font-old-standard">Culture</h2>
        <div class="w-full flex flex-col gap-8">
          <div class="w-full bg-white flex flex-col lg:flex-row lg:gap-8 items-start justify-start min-h-[100px] max-h-[500px]">

            <div class="w-full lg:w-3/5 h-auto lg:h-[400px] overflow-hidden">
              <Image
                src={picture1}
                alt="Culture image"
                class="w-full h-auto lg:h-[400px] object-cover object-center"
                loading="eager"
              />
            </div>
            <div class="w-full lg:w-2/5 pt-4 border border-green-400">
              <p class="text-red-700">Balet</p>
              <h4 class="text-2xl">hoasfhjasd</h4>
            </div>
          </div>

          <div id="culture-articles-box" class="w-full flex flex-col lg:flex-row lg:gap-8 items-center justify-start py-8 px-4 min-h-[100px] max-h-[500px]">

            <ArticleCard/>
            <ArticleCard/>
            <ArticleCard/>
          </div>

          <div id="interview-box" class="w-full bg-white flex flex-col lg:flex-row lg:gap-8 items-center justify-start py-8 px-4 min-h-[100px] max-h-[500px]">

            <div class="w-[200px] h-[200px] rounded-full overflow-hidden">
              <Image
                src={picture1}
                alt="Culture image"
                class="w-full h-full object-cover object-center"
                loading="eager"
              />
            </div>
            <div class="w-full lg:w-fit border-green-400 border">
              <p class="text-red-700">Balet</p>
              <h4>hoasfhjasd:</h4>
              <p class="text-3xl">"kafjlsakdjfkadjsflkasdjfkjasdkfljas"</p>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-row">
      </div>
    </div>
    <div class="w-full lg:w-3/12 px-4 border-l border-gray-300">
      <div id="netlenka-container">
        <h3 class="text-lg font-normal mb-6 uppercase tracking-[0.3em] font-old-standard">Netleka</h3>
        <div class="flex flex-col gap-6">
          <NetlenkaCard/>
          <NetlenkaCard/>
          <NetlenkaCard/>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full">
    <hr class="h-px my-4 border-1">
  </div>
  <div class="w-full flex flex-col px-4 min-h-[200px] border border-yellow-500">
    <h2 class="text-lg font-normal mb-6 uppercase tracking-[0.3em] font-old-standard">Paris</h2>
  </div>
</section>
