---
import { Image } from "astro:assets";
import maagLogo from "../../assets/logo/maaglogo.svg";
import picture1 from "../../assets/images/main.jpeg";
import picture2 from "../../assets/images/cal.jpeg";
import { newsItems } from "@/content/mockNews";
import newsImage from "../../assets/images/article_content/news.jpeg";

import { PUBLIC_API_BASE_URL } from "@/lib/utils/constants";

let latestArticle: any = null;
try {
  const response = await fetch(`${PUBLIC_API_BASE_URL}/api/articles`);
  if (response.ok) {
    const articles = await response.json();
    if (articles.length > 0) {
      latestArticle = articles[0];
    }
  }
} catch (error) {
  console.error("Failed to fetch latest article:", error);
}

// TODO: Add breakpoint for 1260px
---

<section class="mx-auto px-4 lg:px-12 bg-base-200 mb-0">
  <div class="flex flex-col lg:flex-row gap-8 lg:gap-4">
    {/* News Column - THINNER */}
    <aside class="lg:w-1/5">
      <h2
        class="text-lg font-normal mb-6 uppercase tracking-[0.3em] font-old-standard"
      >
        Новости
      </h2>
      <div
        class="flex space-x-6 overflow-x-auto lg:flex-col lg:space-x-0 lg:space-y-6"
      >
        {
          newsItems.map((item) => (
            <div class="flex-shrink-0 sm:w-1/2 md:w-1/3 lg:w-full">
              <div class="flex items-start gap-4">
                <a href={`/article/${item.id}`} class="block bg-base-200 z-50">
                  <Image
                    src={item.image}
                    alt={`News image for ${item.title}`}
                    class="w-20 h-20 object-cover flex-shrink-0"
                    transition:name={`news-image-${item.id}`}
                  />
                </a>
                <div class="flex-1">
                  {/* <span class="text-error uppercase tracking-[.46em] font-inter text-sm">
                    {item.category}
                  </span>
                  <a
                    href={`/article/${item.id}`}
                    class="block bg-base-200 z-50"
                  > */}
                    <h3 class="text-base font-bold font-old-standard mt-1 leading-tight">
                      {item.title}
                    </h3>
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </aside>

    {/* Vertical Divider 1 */}
    <div
      class="hidden lg:block w-px bg-gray-300 flex-shrink-0 pointer-events-none"
    >
    </div>

    {/* Main Column - WIDER */}
    <article class="flex-[7] lg:px-4 order-first lg:order-none relative">
      <h2
        class="text-lg font-normal mb-6 uppercase tracking-[0.3em] font-old-standard"
      >
        Главное
      </h2>
      {latestArticle ? (
        <div>
          <a href={`/article/${latestArticle.id}`} class="block bg-base-200 z-50">
            <img
              src={latestArticle.imageUrl}
              alt={latestArticle.title}
              class="w-full h-auto lg:h-[600px] object-cover relative lg:z-40"
              transition:name={`main-article-image-${latestArticle.id}`}
            />
          </a>
          <div class="p-4 lg:p-6">
            <a href={`/article/${latestArticle.id}`} class="block bg-base-200 z-50">
              <h2 class="text-3xl lg:text-5xl leading-tight font-thin font-old-standard">
                {latestArticle.title} <Image
                  src={maagLogo}
                  alt="MAAG"
                  class="w-8 h-8 lg:w-10 lg:h-10 inline-block align-middle"
                />
              </h2>
            </a>
          </div>
        </div>
      ) : (
        <div>
          <a href="/article/main-article" class="block bg-base-200 z-50">
            <Image
              src={picture1}
              alt="Main article"
              class="w-full h-auto lg:h-[600px] object-cover relative lg:z-40"
              transition:name="main-article-image"
            />
          </a>
          <div class="p-4 lg:p-6">
            <p
              class="text-error uppercase mb-3 font-inter text-sm tracking-[.46em]"
            >
              Балет
            </p>
            <a href="/article/main-article" class="block bg-base-200 z-50">
              <h2 class="text-3xl lg:text-5xl leading-tight font-thin font-old-standard">
                В Парижской опере родилась новая звезда <Image
                  src={maagLogo}
                  alt="MAAG"
                  class="w-8 h-8 lg:w-10 lg:h-10 inline-block align-middle"
                />
              </h2>
            </a>
          </div>
        </div>
      )}
    </article>

    {/* Vertical Divider 2 */}
    <div
      class="hidden lg:block w-px bg-gray-300 flex-shrink-0 pointer-events-none"
    >
    </div>

    {/* Calendar Column */}
    <aside class="lg:w-1/4">
      <h2
        class="text-lg font-normal mb-6 uppercase tracking-[0.3em] font-old-standard"
      >
        Календарь
      </h2>
      <div class="bg-white rounded-xl shadow-lg">
        <div class="p-4 lg:p-2 flex items-center gap-3">
          <div
            class="flex flex-col items-center gap-1 rounded-full bg-base-200 p-3"
          >
            <p
              class="text-2xl lg:text-2xl text-black/50 font-thin font-old-standard"
            >
              30
            </p>
          </div>
          <p class="text-[12px] font-inter uppercase tracking-[0.15em]">
            Сентября
          </p>
        </div>
        <Image
          src={picture2}
          alt="Event"
          class="w-full h-auto lg:h-[240px] object-cover"
        />
        <div class="p-4 lg:p-6">
          <p
            class="text-error uppercase text-[10px] mb-3 font-inter tracking-[0.15em]"
          >
            Выставка
          </p>
          <h2 class="text-base lg:text-lg leading-tight font-old-standard mb-4">
            Огюст Роден и его бабы. Сплетни, интриги, расследования.
          </h2>
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-map-pin"
              ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
              ></path><circle cx="12" cy="10" r="3"></circle></svg
            >
            <p class="text-sm text-gray-600">Место</p>
          </div>
        </div>
      </div>
    </aside>
  </div>
  <div class="mx-auto w-full py-8">
    <hr class="mx-auto w-full border-t-2 border-neutral" />
  </div>
</section>
