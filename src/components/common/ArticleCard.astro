---
import { Image } from "astro:assets";

import picture1 from "../../assets/images/culture.jpg";
import { boolean } from "astro:schema";

interface ArticleCardProps {
  isNetlenka?: boolean
}

const {isNetlenka = true} = Astro.props as ArticleCardProps

const heightClassContainer = isNetlenka ? "max-h-[300px]" : "max-h-[370px]"
const pictureHeightClass = isNetlenka ? "max-h-[200px]" : "max-h-[270px]"

const text = "lalal"
---


<div class:list={["w-full flex flex-col gap-2", heightClassContainer]}>
  <div>
    <Image
      src={picture1}
      alt="Culture image"
      class:list={["w-full object-cover object-center", pictureHeightClass]}
      loading="eager"
    />
  </div>
  <p class="text-error uppercase mb-3 font-inter text-xs tracking-[.46em]">klajsdfksadjfl</p>
  <h3 class="text-lg leading-tight font-old-standard mb-4">kjfdkjfdkf</h3>

</div>
