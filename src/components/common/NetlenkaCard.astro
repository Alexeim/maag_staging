---
import { Image } from "astro:assets";
import picture3 from "../../assets/images/article_content/par.jpeg";

interface NetlenkaCardProps {
  title?: string;
  category?: string;
  imageUrl?: string;
  href?: string;
}

const {
  title = "Без названия",
  category = "Самое Читаемое",
  imageUrl,
  href = "#",
} = Astro.props as NetlenkaCardProps;

const displayImage = imageUrl || picture3.src;
---


<div class="w-full flex flex-col gap-2 max-h-[300px] min-w-[220px] lg:min-w-0">
  <div class="w-full overflow-hidden rounded-lg">
    {imageUrl ? (
      <img
        src={displayImage}
        alt={title}
        class="w-full h-auto object-cover object-center"
        loading="lazy"
      />
    ) : (
      <Image
        src={picture3}
        alt="Hot content image"
        class="w-full h-auto object-cover object-center"
        loading="eager"
      />
    )}
  </div>
  <p class="text-error uppercase mb-3 font-inter text-xs tracking-[.46em]">
    {category}
  </p>
  <a href={href} class="block">
    <h3 class="truncate text-base lg:text-lg leading-tight font-old-standard mb-4 hover:underline">
      {title}
    </h3>
  </a>

</div>
