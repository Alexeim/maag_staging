---
import logoFull from "../../assets/logo/logoFull.svg";
import logoMobile from "../../assets/logo/logo-mobile.svg";
import { Image } from "astro:assets";
---

<section class="relative z-30">
  <div class="h-[130px] lg:h-[400px] bg-base-200">
    <!-- This div is only for background and height -->
  </div>
  <Image
    src={logoMobile}
    alt="Maag"
    class="absolute -top-14 left-1/2 -translate-x-1/2 block lg:hidden lg:z-30 h-[250px] w-1/3 pointer-events-none"
  />
  <Image
    src={logoFull}
    alt="Maag"
    class="absolute -top-4 left-1/2 -translate-x-1/2 hidden lg:block lg:z-30 h-[453px] w-2/3 pointer-events-none"
  />
</section>
