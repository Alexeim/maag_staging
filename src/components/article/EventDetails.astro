---
import { MapPin, CalendarDays, Clock3 } from "@lucide/astro";

interface Props {
  address: string;
  dates: string;
  time?: string | null;
}
const { address, dates, time = null } = Astro.props;
---

<div class="max-w-[826px] mx-auto mt-[100px]">
  <div class="border-y border-base-300 bg-white divide-y divide-base-300">
    <div class="px-5 lg:px-8 py-6 lg:py-7 flex items-start gap-4">
      <MapPin class="w-5 h-5 text-error mt-0.5 shrink-0" />
      <div class="space-y-1">
        <h3 class="text-[11px] font-inter uppercase tracking-[0.22em] text-error">
          Адрес
        </h3>
        <p class="text-lg text-base-content font-oswald leading-tight">{address}</p>
      </div>
    </div>

    <div class="px-5 lg:px-8 py-6 lg:py-7 flex items-start gap-4">
      <CalendarDays class="w-5 h-5 text-error mt-0.5 shrink-0" />
      <div class="space-y-1">
        <h3 class="text-[11px] font-inter uppercase tracking-[0.22em] text-error">
          Даты
        </h3>
        <p class="text-lg text-base-content font-oswald leading-tight">{dates}</p>
      </div>
    </div>

    {time && (
      <div class="px-5 lg:px-8 py-6 lg:py-7 flex items-start gap-4">
        <Clock3 class="w-5 h-5 text-error mt-0.5 shrink-0" />
        <div class="space-y-1">
          <h3 class="text-[11px] font-inter uppercase tracking-[0.22em] text-error">
            Время
          </h3>
          <p class="text-lg text-base-content font-oswald leading-tight">{time}</p>
        </div>
      </div>
    )}
    </div>
</div>
