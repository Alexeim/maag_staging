---
// src/components/article/ArticleHeader.astro
interface Props {
  category: string;
  title: string;
}

const { category, title } = Astro.props;
---

<div class="flex flex-col gap-8 max-w-[825px] w-full">
  <!-- Category and Title -->
  <div class="flex flex-col items-end gap-2">
    <p
      class="text-xs font-medium uppercase tracking-[0.25em] text-error font-['Inter']"
    >
      {category}
    </p>
    <h1 class="text-[44px] leading-[1.28] font-serif text-base-content w-full">
      {title}
    </h1>
  </div>
</div>