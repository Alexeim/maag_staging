---
interface Props {
  category: string;
  title?: string;
}

const { category, title } = Astro.props;
---

<div class="flex flex-col gap-8 w-full">
  <div class="flex flex-col items-start gap-2">
    <p
      class="text-xs font-medium uppercase tracking-[0.25em] text-accent font-['Inter']"
    >
      {category}
    </p>
    <h1
      class="text-3xl lg:text-[44px] leading-tight lg:leading-[1.28] font-serif text-base-content w-full"
    >
      {title}
    </h1>
  </div>
</div>
